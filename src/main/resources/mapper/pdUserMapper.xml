<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.guzx.pri_diary.dao.PdUserDao">

    <sql id="select_user">
        select user_id userId,user_name userName,user_password userPassword,user_state userState
    </sql>

    <sql id="sql_where">
        <if test="user_name!=null">user_name = #{userName}</if>
        <if test="user_password!=null">user_password = #{userPassword}</if>
        <if test="user_state!=null">user_state = #{userState}</if>
    </sql>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId">
        insert into pd_user(user_name,user_password,user_state) value(#{userName},#{userPassword},#{userState})
    </insert>

    <update id="updateUser">
        update pd_user
        <set>
            <include refid="sql_where"></include>
        </set>
        where user_id = #{userId}
    </update>

    <select id="findUserById" parameterType="int" resultType="user">
        <include refid="select_user"></include>
        from
        pd_user
        where
        user_id = #{userId}
    </select>

    <delete id="deleteUser" parameterType="int">
        delete 
        from pd_user 
        where user_id = #{userId}
    </delete>

    <select id="findUsers" resultType="user">
        <include refid="select_user"></include>
        <where>
            <if test="user_name!=null">and user_name = #{userName}</if>
            and user_state = '1'
            limit #{start},#{limit}
        </where>
    </select>
</mapper>