<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.guzx.pri_diary.dao.PdBlogDao">
    <resultMap id="BaseResultMap" type="blog">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="blog_id" javaType="int" property="blogId"/>
        <result column="user_id" javaType="int" property="userId"/>
        <result column="blog_type" javaType="String" property="blogType"/>
        <result column="blog_image" javaType="String" property="blogImage"/>
        <result column="blog_context" javaType="String" property="blogContext"/>
        <result column="blog_label" javaType="String" property="blogLabel"/>
        <result column="blog_create_time" javaType="String" property="blogCreateTime"/>
        <result column="blog_update_time" javaType="String" property="blogUpdateTime"/>
    </resultMap>

    <sql id="sql_where">
        <if test="blogType != null">blog_type = #{blogType},</if>
        <if test="blogImage != null and blogImage != ''">blog_image = #{blogImage},</if>
        <if test="blogContext != null and blogContext != ''">blog_context = #{blogContext},</if>
        <if test="blogLabel != null and blogLabel != ''">blog_label = #{blogLabel},</if>
        <if test="blogCreateTime != null and blogCreateTime != ''">blog_create_time = #{blogCreateTime},</if>
        <if test="blogUpdateTime != null and blogUpdateTime != ''">blog_update_time = #{blogUpdateTime},</if>
    </sql>

    <insert id="insertBlog" useGeneratedKeys="true" keyProperty="blog_id">
        insert into private_diary.pd_blog(blog_id, user_id, blog_type, blog_image, blog_context, blog_label,
                                          blog_create_time, blog_update_time)
            value
            (#{blogId}, #{userId}, #{blogType}, #{blogImage}, #{blogContext}, #{blogLabel},
             #{blogCreateTime}, #{blogUpdateTime})
    </insert>

    <update id="updateBlog">
        update pd_diary
        <set>
            <include refid="sql_where"></include>
        </set>
        where
        private_diary.pd_blog.blog_id = #{blogId} and private_diary.pd_blog.user_id = #{userId}
    </update>
</mapper>